<?xml version="1.0" encoding="utf-8"?>
<!-- Guest Settings screen: for managing account and notification preferences. -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".GuestSettingsActivity">

    <!-- Top App Bar with title and back button -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:title="My Profile and Settings"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_settings"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Account Details Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Username/Name Display -->
                    <TextView
                        android:id="@+id/text_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name: Giridar Harshan"
                        android:paddingVertical="8dp"
                        android:drawablePadding="16dp"
                        app:drawableStartCompat="@drawable/ic_person_24"/>

                    <!-- Email Display -->
                    <TextView
                        android:id="@+id/text_user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email: g.harshan@example.com"
                        android:paddingVertical="8dp"
                        android:drawablePadding="16dp"
                        app:drawableStartCompat="@drawable/ic_email_24"/>

                    <!-- Edit Profile Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:layout_marginTop="8dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Notification Preferences Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Preferences"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <!-- Switch for Reservation Modification Alerts -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_reservation_updates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reservation Modification Alerts"
                        android:checked="true"
                        android:paddingVertical="8dp"
                        android:hint="Get notified when your booking time or size changes."/>

                    <!-- Separator -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="4dp"/>

                    <!-- Switch for Reservation Cancellation Alerts -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_cancellation_alerts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancellation Alerts"
                        android:checked="true"
                        android:paddingVertical="8dp"
                        android:hint="Get notified if your reservation is cancelled by the restaurant."/>

                    <!-- Separator -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="4dp"/>

                    <!-- Switch for Promotional Offers -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_promotional_offers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Promotional Offers"
                        android:checked="false"
                        android:paddingVertical="8dp"
                        android:hint="Receive alerts for special discounts and events."/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sign Out Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:paddingVertical="12dp"
                android:layout_marginTop="40dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="#D32F2F"
                app:strokeColor="#D32F2F"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
