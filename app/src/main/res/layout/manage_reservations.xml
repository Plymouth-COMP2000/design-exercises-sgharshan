<?xml version="1.0" encoding="utf-8"?>
<!-- Guest My Reservations screen: view, modify, or cancel existing bookings. -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyReservationsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_my_reservations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:title="My Reservations"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/text_upcoming_bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming Bookings:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/toolbar_my_reservations"/>

    <!-- RecyclerView for the list of user's reservations -->
    <!-- Placeholder for item layout -->

    <!-- Placeholder for an empty list message -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_my_reservations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_upcoming_bookings"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16dp"
        tools:listitem="@layout/guest_reservation_list" />

    <TextView
        android:id="@+id/text_empty_reservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have no upcoming reservations. Book one now!"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
