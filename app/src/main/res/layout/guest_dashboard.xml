<?xml version="1.0" encoding="utf-8"?>
<!-- Guest Dashboard: Navigates to menu and reservations. -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".GuestDashboardActivity">

    <!-- Top App Bar/Header -->

    <!-- Reservation Card (Make a booking) -->

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Welcome Guest"
        app:titleTextColor="@android:color/white"
        tools:layout_editor_absoluteX="0dp">

        <!-- Placeholder for Account Settings/Profile Icon (Right side) -->
        <ImageView
            android:id="@+id/button_profile"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="end"
            android:contentDescription="Profile Settings"
            android:src="@drawable/person"
    </com.google.android.material.appbar.MaterialToolbar>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_make_reservation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_guest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:layout_width="104dp"
                android:layout_height="70dp"
                android:contentDescription="Make Reservation Icon"
                android:src="@drawable/menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Browse Menu and Book Table"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_browse_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="View Menu"
                android:paddingHorizontal="32dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- My Reservations Card (View existing bookings) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_my_reservations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_make_reservation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/calendar"
                android:contentDescription="Reservations Icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Manage My Bookings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_view_reservations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="My Reservations"
                android:textStyle="bold"
                android:paddingHorizontal="32dp"
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
