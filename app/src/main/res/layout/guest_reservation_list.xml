<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for a single reservation item shown to the Guest.
     Includes key details and action buttons (Modify/Cancel) as per the redesign. -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Reservation Status Icon/Indicator (Top Left) -->
        <ImageView
            android:id="@+id/icon_status"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Reservation Status"
            android:src="@drawable/circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

        <!-- Date TextView -->
        <TextView
            android:id="@+id/text_reservation_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Date: 25/11/2025"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_status"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Time TextView -->
        <TextView
            android:id="@+id/text_reservation_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Time: 7:00 PM"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_status"
            app:layout_constraintTop_toBottomOf="@id/text_reservation_date" />

        <!-- Party Size TextView -->
        <TextView
            android:id="@+id/text_party_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Guests: 4 people"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_status"
            app:layout_constraintTop_toBottomOf="@id/text_reservation_time" />

        <!-- Horizontal Line Separator -->
        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="#EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/text_party_size" />

        <!-- Modify Button (Outlined/Secondary Action) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_modify_reservation"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator" />

        <!-- Cancel Button (Text Button/Tertiary Action) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel_reservation"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Cancel"
            android:textColor="#D32F2F"
            app:iconTint="#D32F2F"
            app:layout_constraintStart_toEndOf="@id/button_modify_reservation"
            app:layout_constraintTop_toBottomOf="@id/separator" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
